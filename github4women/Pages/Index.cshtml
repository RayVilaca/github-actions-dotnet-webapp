@page
@model IndexModel
@{
    ViewData["Title"] = "GitHub4Women";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(45deg, #48018b, #058d76);
            color: #fff;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .hero-section {
            background-image: url('https://images.unsplash.com/photo-1592373086712-d8d3b850ccdd'); /* Exemplo de imagem */
            background-size: cover;
            background-position: center;
            padding: 50px;
            border-radius: 10px;
            box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.3);
        }

        .text-section {
            background-color: rgba(0, 0, 0, 0.5);
            border-radius: 10px;
            padding: 30px;
        }

        h1 {
            font-size: 3rem;
            color: #ffffff;
            font-weight: bold;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        }

        p {
            font-size: 1.25rem;
            line-height: 1.6;
            margin-bottom: 20px;
        }

        .highlight {
            color: #058d76;
            font-weight: bold;
        }

        .animated-button {
            background-color: #48018b;
            color: white;
            padding: 15px 30px;
            font-size: 1.1rem;
            border: none;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

        .animated-button:hover {
            background-color: #058d76;
            color: #333;
            transform: scale(1.1);
        }
    </style>
</head>
<body>

<div class="container mt-5 hero-section">
    <div class="text-center text-section">
        <h1 class="display-4">GitHub4Women</h1>
        <p class="lead">
            GitHub4Women é um projeto dedicado ao <span class="highlight">treinamento e capacitação de mulheres no uso do Git e GitHub</span>,
            promovendo inclusão, autonomia e oportunidades na área de tecnologia.
        </p>
        <a href="https://news.microsoft.com/pt-br/microsoft-esta-com-inscricoes-abertas-para-a-segunda-edicao-do-github4women/" class="animated-button">Saiba Mais</a>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
